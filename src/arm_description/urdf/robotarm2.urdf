<?xml version="1.0"?>
<robot name="cartesian_robot">

  <!-- Main base link -->
  <link name="main_base_link">
    <visual>
      <geometry>
        <box size="0.57 0.47 0.88"/>
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
  </link>

  <!-- Additional base link -->
  <link name="additional_base_link">
    <visual>
      <geometry>
        <box size="0.17 0.35 0.34"/>
      </geometry>
      <material name="dark_grey">
        <color rgba="0.3 0.3 0.3 1.0"/>
      </material>
    </visual>
  </link>

  <!-- X Axis link -->
  <link name="x_link">
    <visual>
      <geometry>
        <box size="0.4 0.1 0.1"/>
      </geometry>
      <material name="red">
        <color rgba="1.0 0.0 0.0 1.0"/>
      </material>
    </visual>
  </link>

    <!-- X Axis rail -->
  <link name="x_rail">
    <visual>
      <geometry>
        <box size="0.4 0.05 0.1"/>
      </geometry>
      <material name="red">
        <color rgba="1.0 0.0 0.0 1.0"/>
      </material>
    </visual>
  </link>

  <!-- Y Axis link -->
  <link name="y_link">
    <visual>
      <geometry>
        <box size="0.1 0.4 0.1"/>
      </geometry>
      <material name="green">
        <color rgba="0.0 1.0 0.0 1.0"/>
      </material>
    </visual>
  </link>

    <!-- Y Axis rail -->
  <link name="y_rail">
    <visual>
      <geometry>
        <box size="0.1 0.4 0.05"/>
      </geometry>
      <material name="green">
        <color rgba="0.0 1.0 0.0 1.0"/>
      </material>
    </visual>
  </link>

  <!-- Z Axis link -->
  <link name="z_link">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.4"/>
      </geometry>
      <material name="blue">
        <color rgba="0.0 0.0 1.0 1.0"/>
      </material>
    </visual>
  </link>

    <!-- Z Axis rail -->
  <link name="z_rail">
    <visual>
      <geometry>
        <box size="0.05 0.1 0.4"/>
      </geometry>
      <material name="blue">
        <color rgba="0.0 0.0 1.0 1.0"/>
      </material>
    </visual>
  </link>

  <!-- Fixed joint between main base and additional base -->
  <joint name="fixed_joint_base" type="fixed">
    <parent link="main_base_link"/>
    <child link="additional_base_link"/>
    <origin xyz="-0.07 0 0.61" rpy="0 0 0"/>
  </joint>

  <!-- X Axis joint -->
  <joint name="x_joint" type="prismatic">
    <parent link="additional_base_link"/>
    <child link="x_link"/>
    <origin xyz="0 0 0.22" rpy="0 0 -1.5708"/>
    <axis xyz="1 0 0"/>
    <limit lower="0.0" upper="0.2" effort="1000.0" velocity="0.1"/>
  </joint>

  <!-- Y Axis joint -->
  <joint name="y_joint" type="prismatic">
    <parent link="x_link"/>
    <child link="y_link"/>
    <origin xyz="0.2 0.15 0.1" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0.0" upper="0.2" effort="1000.0" velocity="0.1"/>
  </joint>

  <!-- Z Axis joint -->
  <joint name="z_joint" type="prismatic">
    <parent link="y_link"/>
    <child link="z_link"/>
    <origin xyz="0.1 0.1 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="0.0" upper="0.2" effort="1000.0" velocity="0.1"/>
  </joint>

</robot>
