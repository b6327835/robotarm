<?xml version="1.0"?>
<robot name="cartesian_robot">

  <!-- Main base link -->
  <link name="main_base_link">
    <visual>
      <geometry>
        <box size="0.57 0.47 0.88"/>
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.57 0.47 0.88"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="10"/>
      <inertia ixx="0.4" ixy="0.0" ixz="0.0" iyy="0.4" iyz="0.0" izz="0.4"/>
    </inertial>
  </link>

  <!-- Additional base link -->
  <link name="additional_base_link">
    <visual>
      <geometry>
        <box size="0.17 0.35 0.34"/>
      </geometry>
      <material name="dark_grey">
        <color rgba="0.3 0.3 0.3 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.17 0.35 0.34"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="5"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

  <!-- X Axis link -->
  <link name="x_link">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
      <material name="red">
        <color rgba="1.0 0.0 0.0 0.8"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.00167" ixy="0.0" ixz="0.0" iyy="0.00167" iyz="0.0" izz="0.00167"/>
    </inertial>
  </link>

  <!-- X Axis rail -->
  <link name="x_rail">
    <visual>
      <geometry>
        <box size="0.4 0.1 0.05"/>
      </geometry>
      <material name="d_red">
        <color rgba="0.5 0.0 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.4 0.1 0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="2"/>
      <inertia ixx="0.00271" ixy="0.0" ixz="0.0" iyy="0.02771" iyz="0.0" izz="0.02938"/>
    </inertial>
  </link>

  <!-- Y Axis link -->
  <link name="y_link">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
      <material name="green">
        <color rgba="0.0 1.0 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.00167" ixy="0.0" ixz="0.0" iyy="0.00167" iyz="0.0" izz="0.00167"/>
    </inertial>
  </link>

  <!-- Y Axis rail -->
  <link name="y_rail">
    <visual>
      <geometry>
        <box size="0.05 0.4 0.1"/>
      </geometry>
      <material name="d_green">
        <color rgba="0.0 0.5 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.05 0.4 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="2"/>
      <inertia ixx="0.02771" ixy="0.0" ixz="0.0" iyy="0.00271" iyz="0.0" izz="0.02938"/>
    </inertial>
  </link>

  <!-- Z Axis link -->
  <link name="z_link">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
      <material name="blue">
        <color rgba="0.0 0.0 1.0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.00167" ixy="0.0" ixz="0.0" iyy="0.00167" iyz="0.0" izz="0.00167"/>
    </inertial>
  </link>

  <!-- Z Axis rail -->
  <link name="z_rail">
    <visual>
      <geometry>
        <box size="0.05 0.1 0.4"/>
      </geometry>
      <material name="d_blue">
        <color rgba="0.0 0.0 0.5 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.05 0.1 0.4"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="2"/>
      <inertia ixx="0.02771" ixy="0.0" ixz="0.0" iyy="0.02938" iyz="0.0" izz="0.00271"/>
    </inertial>
  </link>

  <!-- Fixed joint between main base and additional base -->
  <joint name="fixed_joint_base" type="fixed">
    <parent link="main_base_link"/>
    <child link="additional_base_link"/>
    <origin xyz="-0.07 0 0.61" rpy="0 0 0"/>
  </joint>

  <!-- arm base x rail -->
  <joint name="fixed_x_joint_" type="fixed">
    <parent link="additional_base_link"/>
    <child link="x_rail"/>
    <origin xyz="0 0 0.2" rpy="0 0 -1.5708"/>
  </joint>

  <!-- X Axis joint -->
  <joint name="x_joint" type="prismatic">
    <parent link="x_rail"/>
    <child link="x_link"/>
    <origin xyz="0 0 0.075" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="0.0" upper="0.2" effort="1000.0" velocity="0.1"/>
  </joint>

  <!-- X link, y rail -->
  <joint name="fixed_y_joint" type="fixed">
    <parent link="x_link"/>
    <child link="y_rail"/>
    <origin xyz="0.075 0.15 0" rpy="0 0 0"/>
  </joint>

  <!-- Y Axis joint -->
  <joint name="y_joint" type="prismatic">
    <parent link="y_rail"/>
    <child link="y_link"/>
    <origin xyz="0.075 0 0.0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0.0" upper="0.2" effort="1000.0" velocity="0.1"/>
  </joint>

  <!-- Y link, Z rail -->
  <joint name="fixed_z_joint" type="fixed">
    <parent link="y_link"/>
    <child link="z_rail"/>
    <origin xyz="0.075 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Z Axis joint -->
  <joint name="z_joint" type="prismatic">
    <parent link="z_rail"/>
    <child link="z_link"/>
    <origin xyz="0.075 0 0.0" rpy="0 0 0"/>
    <axis xyz="0 0 -1"/>
    <limit lower="0.0" upper="0.2" effort="1000.0" velocity="0.1"/>
  </joint>
  
  <!-- Transmissions for ros_control -->
  <transmission name="x_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="x_joint">
      <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
    </joint>
    <actuator name="x_motor">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <transmission name="y_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="y_joint">
      <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
    </joint>
    <actuator name="y_motor">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <transmission name="z_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="z_joint">
      <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
    </joint>
    <actuator name="z_motor">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <!-- Gazebo-specific elements -->
  <gazebo reference="main_base_link">
    <material>Gazebo/Grey</material>
  </gazebo>

  <gazebo reference="additional_base_link">
    <material>Gazebo/DarkGrey</material>
  </gazebo>

  <gazebo reference="x_link">
    <material>Gazebo/Red</material>
  </gazebo>

  <gazebo reference="x_rail">
    <material>Gazebo/RedBright</material>
  </gazebo>

  <gazebo reference="y_link">
    <material>Gazebo/Green</material>
  </gazebo>

  <gazebo reference="y_rail">
    <material>Gazebo/GreenBright</material>
  </gazebo>

  <gazebo reference="z_link">
    <material>Gazebo/Blue</material>
  </gazebo>

  <gazebo reference="z_rail">
    <material>Gazebo/BlueBright</material>
  </gazebo>

  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/cartesian_robot</robotNamespace>
      <robotSimType>gazebo_ros_control/DefaultRobotHWSim</robotSimType>
      <legacyModeNS>true</legacyModeNS>
    </plugin>
  </gazebo>

</robot>
